@import 'nib'
@import './styl/normalize'

body
  background-color #eee
  margin 0
  font 13px/1.4 Helvetica, arial, nimbussansl, liberationsans, freesans, clean, sans-serif, "Segoe UI Emoji", "Segoe UI Symbol"

a
  color #333
  text-decoration none

h1,h2,h3,h4,h5
  margin 0

.main
  max-width 800px
  margin 0 auto
  background-color white
  min-height 100vmin
  border-left 1px solid #aaa
  border-right @border-left
  @import './styl/header'

.inner-page
  padding 20px 30px
  .page-title
    font-size 15px

.ideas
  .idea
    padding-bottom 10px
    a
      &:hover
        color #4078c0
